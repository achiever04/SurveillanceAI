# ======================
# API Configuration
# ======================
API_V1_STR=/api/v1
PROJECT_NAME=AI Surveillance Platform
VERSION=1.0.0

# ======================
# Security
# ======================
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARACTERS
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# ======================
# Database
# ======================
POSTGRES_USER=surveillance_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=surveillance_db

# ======================
# Redis
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# IPFS
# ======================
IPFS_API=http://localhost:5001
IPFS_GATEWAY=http://localhost:8080
USE_IPFS=true

# ======================
# Blockchain (Hyperledger Fabric)
# ======================
FABRIC_NETWORK_PATH=./blockchain/fabric-network
FABRIC_ORG1_MSP=Org1MSP
FABRIC_ORG2_MSP=Org2MSP
CHANNEL_NAME=surveillance-channel
EVIDENCE_CHAINCODE=evidence-contract
WATCHLIST_CHAINCODE=watchlist-contract

# ======================
# AI Models
# ======================
FACE_DETECTION_MODEL=mtcnn
FACE_RECOGNITION_MODEL=buffalo_l
CONFIDENCE_THRESHOLD=0.70

# Feature Flags
EMOTION_DETECTION_ENABLED=true
POSE_ESTIMATION_ENABLED=true
ANTI_SPOOF_ENABLED=true
AGE_ESTIMATION_ENABLED=false

# ======================
# Camera Settings
# ======================
MAX_CAMERAS=4
FRAME_RATE=10
PROCESS_EVERY_NTH_FRAME=3
VIDEO_RESOLUTION_WIDTH=1280
VIDEO_RESOLUTION_HEIGHT=720

# ======================
# Storage
# ======================
EVIDENCE_RETENTION_DAYS=30
MAX_EVIDENCE_SIZE_MB=500
LOCAL_STORAGE_PATH=./storage/local/evidence

# ======================
# Federated Learning
# ======================
FL_SERVER_ADDRESS=localhost:8080
FL_NUM_ROUNDS=10
FL_MIN_CLIENTS=2

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs

# ======================
# Frontend (for frontend/.env)
# ======================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000